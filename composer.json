{
    "name": "zicht/key-value-bundle",
    "description": "Zicht KeyValue Bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "doctrine/common": "^2.13 || ^3",
        "doctrine/orm": "^2 || ^3",
        "doctrine/persistence": "^1 || ^2",
        "sonata-project/admin-bundle": "^3",
        "swaggest/json-schema": "^0.12",
        "symfony/form": "^4.4 || ^5",
        "twig/string-extra": "^3.3",
        "twig/twig": "^2.12.1 || ^3",
        "zicht/framework-extra-bundle": "^9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.6",
        "vimeo/psalm": "^5"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Zicht\\Bundle\\KeyValueBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zicht\\Bundle\\KeyValueBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analysis": "psalm",
        "lint": "php-cs-fixer fix --dry-run --diff -vvv",
        "lint-fix": "php-cs-fixer fix",
        "test": "phpunit -c phpunit.xml.dist --testdox"
    }
}
